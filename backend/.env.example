# Backend proxy environment variables
# Copy this to .env and fill in values

# Anthropic API key — the whole point of the proxy
ANTHROPIC_API_KEY=sk-ant-...

# Supabase — service key for JWT validation and usage logging
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# Frontend origin — CORS whitelist
FRONTEND_URL=http://localhost:5173

# Credential encryption key — 32-byte hex (64 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# BACK THIS UP — if lost, all stored API keys become unrecoverable
CREDENTIAL_ENCRYPTION_KEY=

# Scheduled backup cron secret — protects /api/backup/cron/daily-export
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Set in Render Cron Job as Authorization: Bearer <secret>
CRON_SECRET=

# Server port
PORT=3001
